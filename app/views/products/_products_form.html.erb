 <%= simple_form_for [@category,@product] do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :gender, collection: ["Men", "Women", "Accessory"] %>
  <%= f.input :price_cents %>
  <%= f.input :description %>
  <%= f.input :season %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit %>
<% end %>


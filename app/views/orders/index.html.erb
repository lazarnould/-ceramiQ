<% if !@orders %>
  <%= flash[:notice] = "You have no orders yet"%>
<% else %>
  <% @orders .each do |order| %>
    <%order.order_lines.each do |orderline|%>
      <%= orderline.quantity %>
      <%= orderline.product.name %>
      <%= orderline.specification.size %>
      <%= orderline.specification.color %>
      <%= orderline.product.price %>
    <%end%>
    <%=order.make_subtotal%>
  <%end%>
<%end%>s
